<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black_popup"
    android:clickable="true" >

    <LinearLayout
        android:id="@+id/localmusic_popup_linearlayout_bar"
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@color/gray_background"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/localmusic_menu"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/localmusic_popup_linearlayout_scan"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/color_white_blue"
            android:clickable="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:layout_weight="3.3"
                android:scaleType="centerInside"
                android:src="@drawable/ic_title_menu_scan" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/localmusic_scan"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>